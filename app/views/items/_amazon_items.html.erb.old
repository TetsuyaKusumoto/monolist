<div class="container">
  <div class="container-inner inner-default clearfix">
    <% amazon_items.each do |item| %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            <% #TODO 商品画像 %>
            <% @url = item.get('LargeImage/URL') %>
            <% if @url.present? %>
              <%= image_tag(@url , alt: item.get('ItemAttributes/Title')) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: item.get('ItemAttributes/Title')) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <% #TODO 商品タイトル %>
            <% @title = item.get('ItemAttributes/Title') %>
            <% if @title.present? %>
              <%= @title %> 
            <% else %>
              no title
            <% end %>
          </p>
        </div>
        <div class="action clearfix">
          <%  @item = Item.find_by(asin: item.get('ASIN')) %>
          <%# binding.pry %>
          <% if @item.present? %>
            <% if current_user.want? @item %>
              <%= render 'items/unwant' , item: @item %>
            <% else %>
              <%= render 'items/want' , item: @item %>  
            <% end %>
            <% if current_user.have? @item %>
              <%= render 'items/unhave' , item: @item %>
            <% else %>
              <%= render 'items/have' , item: @item %>
            <% end %>
          <% else %>
            <%= link_to "" , ownerships_path(asin: item.get('ASIN') , type: "Want") ,
                      :class => "want-#{item.get('ASIN')} btn-want btn btn-danger btn-sm want",
                      :remote => true,
                      :method => :post %>
            <%= link_to "" , ownerships_path(asin: item.get('ASIN') , type: "Have") ,
                      :class => "have-#{item.get('ASIN')} btn-have btn btn-warning btn-sm have",
                      :remote => true,
                      :method => :post %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
